    subgraph "Playwright Testing Architecture"
        subgraph "Test Framework"
            Tests[Test Specs<br/>TypeScript]
            POM[Page Object<br/>Model]
            Fixtures[Test Fixtures<br/>Setup/Teardown]
        end

        subgraph "Playwright"
            PW[Playwright<br/>Test Runner]
            Browser[Multi-Browser<br/>Chrome/FF/Safari]
        end

        subgraph "Application Under Test"
            Web[Web Application<br/>Frontend]
            API[REST API<br/>Backend]
            DB[(Database)]
        end

        subgraph "Test Data"
            Faker[Faker.js<br/>Test Data Gen]
            DBSetup[Database<br/>Test Setup]
        end

        subgraph "CI/CD"
            Pipeline[CI Pipeline<br/>GitLab/GitHub]
            Report[Test Report<br/>HTML/Video]
            Trace[Trace Viewer<br/>Debug]
        end
    end

